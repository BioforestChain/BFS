<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.dwebbrowser" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/colorPrimary_light</item>
    <item name="colorPrimaryVariant">@color/colorPrimaryVariant_light</item>
    <item name="colorOnPrimary">@color/colorOnPrimary_light</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/colorSecondary_light</item>
    <item name="colorSecondaryVariant">@color/colorSecondaryVariant_light</item>
    <item name="colorOnSecondary">@color/colorOnSecondary_light</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor">@color/colorPrimary_light</item>
    <!-- Customize your theme here. -->
    <item name="android:textAllCaps">false</item>
    <!-- 关闭窗口预览，避免跳转activity时白屏问题 -->
    <item name="android:windowDisablePreview">true</item>
  </style>

  <style name="OnClick">
    <item name="android:clickable">true</item>
    <item name="android:onClick">onClick</item>
  </style>

  <style name="Theme.dwebbrowser.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="Theme.RustExample.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="Theme.RustExample.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

  <!-- Splash启动页Style -->
  <style name="Theme.App.Starting" parent="Theme.SplashScreen">
    <!--启动画面背景颜色-->
    <item name="windowSplashScreenBackground">#FFFFFF</item>
    <!-- 启动画面icon图标：这里可以是图片、帧动画等-->
    <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
    <item name="windowSplashScreenIconBackgroundColor">#ff00ff</item>

    <!-- icon动画在关闭之前显示的时长：最长时间为1000毫秒-->
    <item name="windowSplashScreenAnimationDuration">200</item>

    <!-- 启动画面底部的 Brand 图片-->
    <!--<item name="android:windowSplashScreenBrandingImage">@drawable/ic_branding</item>-->

    <!-- Splash退出后的主题-->
    <item name="postSplashScreenTheme">@style/Theme.AppCompat.Light.NoActionBar</item>
  </style>
</resources>
