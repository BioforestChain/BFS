{
  "importMap": "import_map.json",
  "exclude": [
    "**/assets/",
    "electron/"
  ],
  "lint": {
    "rules": {
      "exclude": [
        "no-explicit-any",
        "no-unused-vars",
        "no-debugger",
        "require-await",
        "redirect"
      ]
    }
  },
  "tasks": {
    "dnt": "deno run -A ./scripts/dnt.ts && deno task start --inspect",
    "start": "cd ./electron && pnpm start ",
    "pkg": "deno task pkg:win && deno task pkg:mac",
    "pkg:win": "npx --yes electron-packager ./electron dweb-browser-devtools --platform=win32 --arch=x64 --ignore=apps --out=build --overwrite ",
    "pkg:mac": "npx --yes electron-packager ./electron dweb-browser-devtools --ignore=apps --out=build --overwrite ",
    "assets": "deno run -A ./scripts/assets.ts",
    "esm:add": "deno run -A https://esm.sh/v124 add",
    "esm:update": "deno run -A https://esm.sh/v124 update",
    "esm:remove": "deno run -A https://esm.sh/v124 remove",
    "plaoc": "deno run -A ../plaoc/cli/plaoc.ts",
    "lock": "deno cache --reload --lock-write scripts/deps.ts src/index.ts"
  }
}

