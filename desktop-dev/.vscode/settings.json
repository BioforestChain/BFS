{
  "deno.enable": true,
  "files.exclude": {
    "build/": false,
    "electron/": true,
    "node_modules/": true,
    "**/*.bak": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },
  "svg.preview.background": "editor",
  "[sass]": {
    "editor.defaultFormatter": "syler.sass-indented"
  }
}
