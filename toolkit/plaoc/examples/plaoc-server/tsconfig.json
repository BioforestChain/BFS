{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noImplicitOverride": true,
    "allowImportingTsExtensions": true,
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["/**/*.ts"],
  "exclude": ["node_modules"]
}
