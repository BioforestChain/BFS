{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ESNext",
        "jsx": "react",
        "allowImportingTsExtensions": true,
        "useDefineForClassFields": false,
        "verbatimModuleSyntax": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "experimentalDecorators": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "**/npm/*"
    ]
}