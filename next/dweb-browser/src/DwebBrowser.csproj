<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net7.0-android;net7.0-ios;net7.0-maccatalyst</TargetFrameworks>
		<TargetFrameworks Condition="$([MSBuild]::IsOSPlatform('windows'))">$(TargetFrameworks);net7.0-windows10.0.19041.0</TargetFrameworks>
		<!-- Uncomment to also build the tizen app. You will need to install tizen by following this: https://github.com/Samsung/Tizen.NET -->
		<!-- <TargetFrameworks>$(TargetFrameworks);net7.0-tizen</TargetFrameworks> -->
		<OutputType>Exe</OutputType>
		<RootNamespace>dweb_browser</RootNamespace>
		<UseMaui>true</UseMaui>
		<SingleProject>true</SingleProject>
		<ImplicitUsings>enable</ImplicitUsings>

		<!-- Display name -->
		<ApplicationTitle>dweb-browser</ApplicationTitle>

		<!-- App Identifier -->
		<ApplicationId>com.companyname.dweb_browser</ApplicationId>
		<ApplicationIdGuid>4794f859-0c74-4b8d-aabe-c1ec32d16be4</ApplicationIdGuid>

		<!-- Versions -->
		<ApplicationDisplayVersion>1.0</ApplicationDisplayVersion>
		<ApplicationVersion>1</ApplicationVersion>

		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'ios'">11.0</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'maccatalyst'">13.1</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'android'">21.0</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'windows'">10.0.17763.0</SupportedOSPlatformVersion>
		<TargetPlatformMinVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'windows'">10.0.17763.0</TargetPlatformMinVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'tizen'">6.5</SupportedOSPlatformVersion>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|net7.0-ios|AnyCPU'">
	  <CreatePackage>false</CreatePackage>
	</PropertyGroup>
	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|net7.0-ios|AnyCPU'">
	  <CreatePackage>false</CreatePackage>
	</PropertyGroup>
	<ItemGroup>
		<!-- App Icon -->
		<MauiIcon Include="Resources\AppIcon\appicon.svg" ForegroundFile="Resources\AppIcon\appiconfg.svg" Color="#512BD4" />

		<!-- Splash Screen -->
		<MauiSplashScreen Include="Resources\Splash\splash.svg" Color="#512BD4" BaseSize="128,128" />

		<!-- Images -->
		<MauiImage Include="Resources\Images\*" />
		<MauiImage Update="Resources\Images\dotnet_bot.svg" BaseSize="168,208" />

		<!-- Custom Fonts -->
		<MauiFont Include="Resources\Fonts\*" />

		<!-- Raw Assets (also remove the "Resources\Raw" prefix) -->
		<MauiAsset Include="Resources\Raw\**" LogicalName="%(RecursiveDir)%(Filename)%(Extension)" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="7.0.0" />
	</ItemGroup>

	<ItemGroup>
	  <None Remove="Resources\.DS_Store" />
	  <None Remove="Shared\Jmm\" />
	  <None Remove="Platforms\iOS\IpcWeb\" />
	  <None Remove="Platforms\iOS\WebModule\Js\" />
	  <None Remove="Resources\Assets\" />
	  <None Remove="Platforms\iOS\WebModule\User\" />
	  <None Remove="Resources\Assets\bundle\" />
	  <None Remove="Resources\Assets\bundle\jmm\index.html" />
	  <None Remove="Resources\Assets\bundle\jmm\" />
	  <None Remove="Resources\Assets\bundle\js-process\index.html" />
	  <None Remove="Resources\Assets\bundle\js-process\openNativeWindow.preload-0848682a.js" />
	  <None Remove="Resources\Assets\bundle\js-process\" />
	  <None Remove="Resources\Assets\bundle\multi-webview\index.html" />
	  <None Remove="Resources\Assets\bundle\multi-webview\" />
	  <None Remove="Resources\Assets\bundle\browser.worker.js" />
	  <None Remove="Resources\Assets\bundle\cot.worker.js" />
	  <None Remove="Resources\Assets\bundle\cotDemo.worker.js" />
	  <None Remove="Resources\Assets\bundle\desktop.worker.js" />
	  <None Remove="Resources\Assets\bundle\js-process.worker.js" />
	  <None Remove="Resources\Assets\bundle\toy.worker.js" />
	</ItemGroup>
	<ItemGroup>
	  <ProjectReference Include="..\Helper\src\DwebBrowser.Helper.csproj" />
	  <ProjectReference Include="..\MicroService\src\DwebBrowser.MicroService.csproj" />
	</ItemGroup>
	<ItemGroup Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'ios'">
		<ProjectReference Include="..\DWebView\src\DwebBrowser.DWebView.csproj" />
	</ItemGroup>
	<ItemGroup>
	  <Folder Include="Platforms\iOS\IpcWeb\" />
	  <Folder Include="Platforms\iOS\WebModule\Js\" />
	  <Folder Include="Resources\Assets\" />
	  <Folder Include="Platforms\iOS\WebModule\User\" />
	  <Folder Include="Resources\Assets\bundle\" />
	  <Folder Include="Resources\Assets\bundle\jmm\" />
	  <Folder Include="Resources\Assets\bundle\js-process\" />
	  <Folder Include="Resources\Assets\bundle\multi-webview\" />
	</ItemGroup>
	<ItemGroup>
	  <BundleResource Include="Resources\Assets\bundle\jmm\index.html" />
	  <BundleResource Include="Resources\Assets\bundle\js-process\index.html" />
	  <BundleResource Include="Resources\Assets\bundle\js-process\openNativeWindow.preload-0848682a.js" />
	  <BundleResource Include="Resources\Assets\bundle\multi-webview\index.html" />
	  <BundleResource Include="Resources\Assets\bundle\browser.worker.js" />
	  <BundleResource Include="Resources\Assets\bundle\cot.worker.js" />
	  <BundleResource Include="Resources\Assets\bundle\cotDemo.worker.js" />
	  <BundleResource Include="Resources\Assets\bundle\desktop.worker.js" />
	  <BundleResource Include="Resources\Assets\bundle\js-process.worker.js" />
	  <BundleResource Include="Resources\Assets\bundle\toy.worker.js" />
	</ItemGroup>
</Project>
